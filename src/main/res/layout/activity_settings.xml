<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.apps71.notelocker.ToolSettings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Settings"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="#FF0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/separatorColor"
        android:layout_below="@id/note_header_read_note"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/change_current_password_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:text="Change current Password" />

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/change_current_security_qa_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:text="Change current Security Q&amp;A" />

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/delete_all_notes_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:text="Delete all notes" />

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:stretchColumns="2">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactive Time Out in"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/decrease_time_out_btn_settings"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:onClick="decreaseTimeOut"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tool_time_out_mins_settings"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_weight=".60"
                android:gravity="center"
                android:padding="5dp"
                android:text="05 Mins"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/increase_time_out_btn_settings"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:onClick="increaseTimeOut"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/note_locker_tool_developed_by"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>






</LinearLayout>
