<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps71.notelocker">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:node="replace" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tool_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tool_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserHome"
            android:screenOrientation="portrait" />
        <!-- android:parentActivityName=".MainActivity" -->

        <activity
            android:name=".SetSecretQuestion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgetPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".About"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ToolSettings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditNote"
            android:screenOrientation="portrait" />
        <!-- android:parentActivityName="com.myapps71.notelocker.UserHome" /> -->
        <activity
            android:name=".ReadNote"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutNotePopup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopUpWindowTheme" />
        <activity
            android:name=".AddCommentToNote"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopUpWindowTheme" />
        <activity
            android:name=".BackUpData"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewInstallationRunner"
            android:label="@string/title_activity_new_installation_runner"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangePassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RestoreBackUpFileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangeSecurityQA"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeleteAllNotes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LockApplication"
            android:screenOrientation="portrait" />

    </application>



</manifest>